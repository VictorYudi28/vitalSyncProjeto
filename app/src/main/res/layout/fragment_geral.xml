<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.geral.GeralFragment"
    android:background="#E7FED2"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/texto_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Registro Geral"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#2D6A2E"
        />

    <LinearLayout
        android:id="@+id/peso"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/texto_principal"
        android:background="@drawable/bg_container_borda_registro"
        android:padding="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="73 kg"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/altura"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/peso"
        android:background="@drawable/bg_container_borda_registro"
        android:padding="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="180 cm"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idade"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/altura"
        android:background="@drawable/bg_container_borda_registro"
        android:padding="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="32"
            android:textColor="#2D6A2E"
            android:textSize="27dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_registro_geral"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/idade"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A0E082"
        android:text="Salvar"
        android:textColor="#2D6A2E"
        android:textSize="25dp"
        android:textAllCaps="false"
        />


    <TextView
        android:id="@+id/grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Victor Yudi, Guilherme Saldanha, Lucas Tambellini, Leonardo Bueno "
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:textColor="#2D6A2E"

        />

    <TextView
        android:textColor="#2D6A2E"
        android:id="@+id/grupo_ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2025"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/grupo"
        app:layout_constraintStart_toStartOf="@+id/grupo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>